makeTransform(props)
  -webkit-transform props
  transform props

.charts-container
  position relative
  width 100%
  background-color #fff
  padding-top 10px
  overflow hidden

  .tool-fullscreen
    position absolute
    top 0
    right 0
    width 36px
    height 36px
    z-index 10
    background url(../../images/icons/fullscreen.png) no-repeat 9px 9px
    background-size 18px auto

.charts-main
  width 100%
  height 500px

.charts-fullscreen
  .charts-main
    position fixed
    left 0
    top 0
    makeTransform(rotate(90deg))
