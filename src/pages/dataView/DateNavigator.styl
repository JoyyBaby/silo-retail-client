.date-navigator
  position relative
  margin-bottom 5px
  padding: 15px 0
  text-align center
  background-color #fff

  .date
    margin-right 25px
    font-size 16px

  .date-arrow
    position absolute
    top:50%
    left 50%
    -webkit-transform translateY(-50%)
    transform translateY(-50%)
    border-radius 4px

    &.left
      margin-left -132px

    &.right
      margin-left 100px

    > svg
      width 30px
      height 30px
      fill #999

    &.disabled
      > svg
        fill #e0e0e0

    &:not(.disabled):active
      background-color #f0f0f0