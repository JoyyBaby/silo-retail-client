makeTransform(props)
  -webkit-transform props
  transform props

.date-navigator
  position relative
  margin-bottom 5px
  padding: 15px 0
  text-align center
  background-color #fff
  z-index 205

  .date
    margin-right 25px
    font-size 16px

  .date-arrow
    position absolute
    top:50%
    left 50%
    -webkit-transform translateY(-50%)
    transform translateY(-50%)

    &.left
      margin-left -132px

    &.right
      margin-left 100px

    > svg
      width 30px
      height 30px
      fill #999

    &.disabled
      > svg
        fill #e0e0e0

.date-indicator
  .date-arrow
    &.left
      margin-left 0
      left 0
    &.right
      margin-left 0
      left auto
      right 0

  .day
    margin-left 12px
    margin-right 12px

  .date
    position absolute
    top 40px
    left 1px
    color #333

//全屏样式重写
.date-navigator-full
  position fixed
  makeTransform(rotate(90deg) translate(50%, -50%))
